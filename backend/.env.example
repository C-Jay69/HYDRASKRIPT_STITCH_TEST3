# Environment Variables

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/hydraskript"

# Supabase
SUPABASE_URL="your-supabase-url"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_KEY="your-supabase-service-key"

# Redis
REDIS_URL="redis://localhost:6379"

# OpenAI/OpenRouter
OPENAI_API_KEY="your-openai-api-key"
OPENROUTER_API_KEY="your-openrouter-api-key"

# Stripe
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# JWT
JWT_SECRET="your-jwt-secret-key"

# Storage (Cloudflare R2 or AWS S3)
STORAGE_ACCESS_KEY_ID="your-storage-access-key"
STORAGE_SECRET_ACCESS_KEY="your-storage-secret-key"
STORAGE_BUCKET_NAME="hydraskript-storage"
STORAGE_ENDPOINT="your-storage-endpoint"

# Server
PORT=3001
NODE_ENV="development"

# AI Services
FAL_AI_API_KEY="your-fal-ai-api-key"
ELEVENLABS_API_KEY="your-elevenlabs-api-key"

# WebSocket
WS_PORT=3002